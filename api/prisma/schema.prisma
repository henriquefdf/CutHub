generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int         @id @default(autoincrement())
  nome        String
  email       String      @unique
  tipo        String
  senha       String
  foto        String?     // URL da foto do usuário
  tokenRecPass String?    @unique @db.VarChar(255)
  dateRecPass DateTime?   @db.DateTime(3)
  barbearia   Barbearia?  // Alterado para ser um relacionamento um-para-um
}

model Barbearia {
  id         Int      @id @default(autoincrement())
  nome       String
  endereco   String
  foto       String?  // URL da foto da barbearia
  usuarioId  Int      @unique // Garante que a relação seja um-para-um
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
}
